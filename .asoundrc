# Minimal ALSA configuration for USB microphone in Docker
# Bypasses problematic plugins and directly uses hardware

# Default PCM device - direct hardware access
pcm.!default {
    type hw
    card 0
    device 0
}

# Default control device
ctl.!default {
    type hw
    card 0
}

# USB microphone specific configuration
pcm.usb_mic {
    type hw
    card 0
    device 0
}

ctl.usb_mic {
    type hw
    card 0
}

# Disable problematic plugins
pcm.dmix {
    type null
}

pcm.dsnoop {
    type null
}

pcm.hdmi {
    type null
}

pcm.modem {
    type null
}

pcm.phoneline {
    type null
}
